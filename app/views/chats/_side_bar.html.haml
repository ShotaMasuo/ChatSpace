.side-bar
  .side-bar__user-name
    .top-items
      .top-items__name 
        = current_user.name

      .top-items__icons
        = link_to new_group_path, class: "top-items__setting-icon" do
          = icon('far', 'edit')
        = link_to edit_user_path(current_user), class: "top-items__edit-icon"  do
          = icon('fas', 'cog')
  .side-bar__group-list
    - current_user.groups.each do |group|
      .group-item
        .group-item__name
          = link_to group_chats_path(group), class: "group-item__link-group" do
            .Group__name
              = group.name
            .group-item__latest-message
              = group.show_last_chat